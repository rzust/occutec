.breadcrumbs.margin-bottom-40
  .container
    %h1.pull-left
      = product.category.name rescue ""
    %ul.pull-right.breadcrumb
      %li

        %a{href: root_path}
          %i.icon-home

      %li
        LÃ­nea de Productos

      %li.active
        %a{href: (page_path(product.category.name) rescue "")}
          = product.category.name rescue ""

.row.margin-bottom-40
  .col-md-12
    #slide-wrapper
      #banner
        - product.gallery.gallery_images.each do |x|
          .oneByOne_item
            =image_tag x.image_url(:slider), :class => "img-responsive"


.purchase
  .container
    .row
      .col-md-12
        %span
          = product.name.html_safe rescue ""
        /
          %p
            = product.description.html_safe rescue ""

- product.sections.each do |x|
  .container
    .row
      .col-md-2
      .col-md-8
        .headline
          %h2
            = x.title.html_safe if !x.title.nil?
    .row.margin-bottom-40
      .col-md-2
      -if x.image?
        .col-md-5{style: 'margin-bottom: 40px;'}
          %p
            = x.body.html_safe rescue ""
        }
        .col-md-3{style: 'margin-left: auto; margin-right: auto;'}
          = image_tag x.image_url(:section), :class => "img-responsive"
        }
      -else
        .col-md-8
          %p
            = x.body.html_safe rescue ""