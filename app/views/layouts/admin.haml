/[if IE 8]
  %html{lang: "en", :class => "ie8"} 
/[if IE 9]
  %html{lang: "en", :class => "ie9"}
/[if !IE]
  %html{lang: "en"} 
%html
  %head
    %title Admin Ocutec
    %meta{content: 'width=device-width', 'initial-scale' => 1, 'maximum-scale' => 1, 'user-scalable' => 'no', name: 'viewport'}
    %meta{content: 'text/html;charset=utf-8', 'http-equiv' => 'content-type'}
    = favicon_link_tag
    = stylesheet_link_tag    "admin/application", media: "all"
    = javascript_include_tag "admin/application"
    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag "admin/ie/html5shiv.js"
      = javascript_include_tag "admin/ie/respond.min.js"
    %body.contrast-sea-blue
      = render 'admin/shared/header'

      #wrapper
        - if current_user.is_admin
          = render 'admin/shared/menu'
        -else
          = render 'admin/shared/customer_menu'
        %section#content
          .container
            .row#content-wrapper
              .col-xs-12
                = yield
            %footer#footer
              .footer-wrapper
                .row
                  .col-sm-6.text
                    Copyright Â© 2014 Ocutec
                  .col-sm-6.buttons
:javascript
  $(document).ready(function(){
    $(".bootstrap-wysihtml5-insert-image-modal").each(function(){
      $(this).closest("li").hide();
    });
    $(".bootstrap-wysihtml5-insert-link-modal").each(function(){
      $(this).closest("li").hide();
    });
  });