
.row
  .col-sm-12
    .page-header
      %h1.pull-left
        %i.icon-calendar
        %span
          Evento

.row
  .col-sm-12
    .box.bordered-box.blue-border
      .box-header.blue-background
        .title
          %i.icon-plus
          Evento
      .box-content.box-double-padding
        = form_for [:admin, @event], :html => {:class => "form", :multipart => true} do |f|
          
          %fieldset
            .row
              .col-sm-2
              .col-sm-8
                .form-group
                  = f.label "Nombre"
                  = f.text_field :name, :class => "form-control"
                .form-group
                  = f.label "DescripciÃ³n"
                  = text_area_tag("event[description]", "", rows: '10', :class => "form-control wysihtml5", id: "body")
                .form-group
                  = f.label "Fecha"
                  .input-group.datepicker#datepicker
                    = f.text_field :date, :class => "form-control", "data-format" => "yyyy-MM-dd", placeholder: 'Seleccionar Fecha'
                    %span.input-group-addon
                      %span.icon-calendar{"data-date-icon" => 'icon-calendar', "data-time-icon" => 'icon-time'}
          
       


          .form-actions
            .row 
              .col-sm-7.col-sm-offset-5
                = link_to "Regresar", :back, :class => "btn btn-primary btn-sm"
                = f.submit "Guardar", :class => "btn btn-primary btn-sm"

  