
.row
  .col-sm-12
    .page-header
      %h1.pull-left
        %i.icon-edit
        %span
          = @category.name

.row
  .col-sm-12
    .box.bordered-box.blue-border
      .box-header.blue-background
        .title
          %i.icon-plus
          = @category.name
      .box-content.box-double-padding
        = form_for [:admin, @category], :html => {:class => "form", :multipart => true} do |f|
          
          %fieldset
            .row
              .col-sm-2
              .col-sm-8
                .form-group
                  = f.label "Título"
                  = f.text_field :name, :class => "form-control"
                .form-group
                  = f.label "Descripción"
                  = text_area_tag("category[description]", @category.description, rows: '10', :class => "form-control wysihtml5", id: "body")

          .form-actions
            .row 
              .col-sm-7.col-sm-offset-5
                = f.submit "Guardar", :class => "btn btn-primary btn-lg"

  