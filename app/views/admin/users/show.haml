.row
  .col-sm-12
    .page-header
      %h1.pull-left
        %i.icon-edit
        - if @user.is_admin
          %span
            Administrador:
            = "#{@user.first_name} #{@user.last_name}"
        - else
          %span
            Usuario:
            = "#{@user.first_name} #{@user.last_name}"
      .pull-right
        %ul.breadcrumb
          %li
            %a{href: admin_dashboard_path}
              %i.icon-bar-chart
          %li.separator
            %i.icon-angle-right
          %li
            = @user.is_admin ? "Administradores" : "Usuarios"
          %li.separator
            %i.icon-angle-right
          %li.active
            = "#{@user.first_name} #{@user.last_name}"  

.row
  .col-sm-12
    .box.bordered-box.blue-border
      .box-header.blue-background
        .title
          %i.icon-user
          = @user.is_admin ? "Administrador" : "Usuario"
      .box-content.box-double-padding
        %form.form
          %fieldset
            .col-sm-4
            .col-sm-7.col-sm-offset-1
              - if !@user.is_admin
                .form-group
                  %label
                    Empresa:
                  = @user.company
              .form-group
                %label 
                  E-mail:
                %span.form-control
                  = @user.email
              .form-group
                %label 
                  Nombre:
                %span.form-control
                  = @user.first_name
              .form-group
                %label 
                  Apellido:
                %span.form-control
                  = @user.last_name
              .form-group
                %label 
                  Teléfono:
                %span.form-control
                  = @user.phone
              .form-group
                %label
                  Dirección:
                %span.form-control
                  = @user.address
          .form-actions
            .row 
              .col-sm-7.col-sm-offset-5
                = link_to "Edit", edit_admin_user_path(@user), :class => "btn btn-warning"
                  


          

     