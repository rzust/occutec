.row
  .col-sm-12
    .page-header
      %h1.pull-left
        %i.icon-edit
        %span
          Editar Contacto Principal

      .pull-right
        %ul.breadcrumb
          %li
            %a{href: admin_dashboard_path}
              %i.icon-bar-chart
          %li.separator
            %i.icon-angle-right
          %li.active
            Contacto Principal  

.row
  .col-sm-12
    .box.bordered-box.blue-border
      .box-header.blue-background
        .title
          %i.icon-location-arrow
          Contacto Principal
        .actions

          %a{href: "#", id: "enable-edit", :class => "btn btn-xs btn-link"}
            %i.icon-edit
            %span
              Editar
      .box-content.box-double-padding
        = form_for [:admin, main_contact], :html => {:class => "form"} do |f|          
          %fieldset
            .col-sm-2
            .col-sm-8
              .form-group
                = f.label :email, "E-mail"
                = f.text_field :email1, :class => "form-control", :type => "text", :disabled => true
              .form-group
                = f.label :phone, "Teléfono 1"
                = f.text_field :phone1, :class => "form-control", :type => "text", :disabled => true
              .form-group
                = f.label :phone, "Teléfono 2"
                = f.text_field :phone2, :class => "form-control", :type => "text", :disabled => true
              .form-group
                = f.label :address, "Dirección"
                = f.text_field :address1, :class => "form-control", :type => "text", :disabled => true
                %p.help-block
                  %small.text-muted
                    Calle XX, (dpto/ofi XX), Distrito, Provincia
              .form-group
                = f.label :week_available, "Horario días de semana"
                = f.text_field :week_available, :class => "form-control", :type => "text", :disabled => true
              .form-group
                = f.label :saturday_available, "Horario Sábado"
                = f.text_field :saturday_available, :class => "form-control", :type => "text", :disabled => true
              .form-group
                = f.label :sunday_available, "Horario Domingo"
                = f.text_field :sunday_available, :class => "form-control", :type => "text", :disabled => true
          .form-actions
            .row 
              .col-sm-7.col-sm-offset-5
                = f.submit "Guardar", :class => "btn btn-primary btn-lg", :disabled => true
                  

:javascript
  
  $("#enable-edit").click(function(){
    $("input").each(function(index){
      $(this).prop('disabled', false);
    });
  });
          

     