.breadcrumbs
  .container
    %h1.pull-left
      = @sections[0].title.html_safe
    %ul.pull-right.breadcrumb
      %li
        
        %a{href: root_path}
          %i.icon-home

      %li 
        = link_to "Línea de Productos", root_path
          
      %li.active
        Tecnología Digital

/ .row.margin-bottom-40
/ .col-md-12
/ #slide-wrapper
/ #banner
/ .oneByOne_item
/ =image_tag "slider1.jpg"

/ .oneByOne_item
/ =image_tag "slider2.jpg"

.purchase
  .container
    .row
      .col-md-12
        %p
          = @sections[0].body.html_safe

.container
  - products(1).each do |x|
    .search-blocks.search-blocks-top-sea.margin-bottom-20
      .row
        .col-md-4.search-img
          %a{href: "#"}
            = image_tag x.logo_url(:logo), :class => "img-responsive" if x.logo
        .col-md-8
          %h2
            %a{href: product_path(x)}
              = x.name
          %p
            = x.description


