.banner.margin-bottom-20
  %ul
    - @slider_images.each do |x|
      %li
        = image_tag "#{x.image_url(:main_slider)}", :class => "img-responsive main-slider", :style => "min-height: 200px;"

/- @gallery_images.each do |image|
/%li
/= image_tag "#{image.image_url}", :class => "img-responsive main-slider", :style => "min-height: 200px;"


.row
  - @sections.each do |x|
    .col-md-4
      .service
        .desc
          %h4.center
            = x.title.html_safe
          %p.center
            = x.body.html_safe




- if @images.count > 6
  .container
    #clients-flexslider.flexslider.home.clients
      .headline
      %ul.slides
        - @images.each do |url|
          %li
            %a
              =image_tag(url, :class => "grayscale", alt: "" )
              =image_tag(url, class: "color-img", alt: "")
  %br           


:javascript

  if(window.chrome) {
    $('.banner li').css('background-size', '100% 100%');
  }
  
  $('.banner').unslider({
    fluid: true,
    dots: true,
    speed: 1000
  });

  //  Find any element starting with a # in the URL
  //  And listen to any click events it fires
  $('a[href^="#"]').click(function() {
    //  Find the target element
    var target = $($(this).attr('href'));
    
    //  And get its position
    var pos = target.offset(); // fallback to scrolling to top || {left: 0, top: 0};
    
    //  jQuery will return false if there's no element
    //  and your code will throw errors if it tries to do .offset().left;
    if(pos) {
      //  Scroll the page
      $('html, body').animate({
        scrollTop: pos.top,
        scrollLeft: pos.left
      }, 1000);
    }
    
    //  Don't let them visit the url, we'll scroll you there
    return false;
  });
  
